<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_view_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_view_course_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Overview"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Lessons"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

<!--    <RecyclerView-->
<!--        android:id="@+id/recycler_view_video_lessons"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:nestedScrollingEnabled="false"-->
<!--        android:layout_marginBottom="16dp" />-->

    <Button
        android:id="@+id/button_take_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Quiz" />

</LinearLayout>
